<{{ element | default('li') }} class="{{ component_id }} {{ styleModifier }}">

{% block leftcontent %}
    <span class="{{ component_id }}__icon">{{ inline_svg() |raw }}</span>
{% endblock %}

    {% block rightcontent %}
        <span class="{{ component_id }}__content">{{ text | default(Faker('text',100)) }}</span>
    {% endblock %}

</{{ element | default('li') }}>